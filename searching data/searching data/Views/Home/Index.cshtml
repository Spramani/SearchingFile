@model IEnumerable<searching_data.Models.user>
@{
    ViewBag.Title = "Home Page";
}

<br />
<br />

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    @Html.TextBox("searching")
    <input type="submit" value="search" />

}

<table>
    <thead>
        <tr>
            <td>id</td>
            <td>username</td>
            <td>email</td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:orangered">
                    No mach any document
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.user_name_id</td>
                    <td>@item.user_email</td>
                </tr>
            }
        }
    </tbody>
</table>